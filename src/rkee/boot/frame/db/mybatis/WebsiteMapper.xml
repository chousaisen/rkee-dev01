<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rkee.boot.frame.db.mybatis.WebsiteMapper">
    <!-- 添加一个网站 -->
    <insert id="addWebsite" parameterType="rkee.boot.frame.db.mybatis.Website">
        insert into website
        (id,name,url,age,country)
        values(#{id},#{name},#{url},#{age},#{country})
    </insert>
    
	<!--使用自定义结果集类型 -->
	<resultMap type="rkee.boot.frame.db.mybatis.Website" id="myResult">
	    <!-- property 是 rkee.boot.frame.db.mybatis.Website 类中的属性 -->
	    <!-- column是查询结果的列名，可以来自不同的表 -->	
	    <id property="id" column="id" />   
	    <result property="name" column="name1" />
	    <result property="age" column="age1" />
	    <result property="url" column="url1" />
	    <result property="address" column="address1" />
	</resultMap>    
    
    <!-- 查询所有网站信息 -->
    <select id="selectAllWebsite" resultMap="myResult" parameterType="rkee.boot.frame.db.mybatis.Website">
        select id,name1,age1,url1,address1 from website where name1=#{name}
    </select>
    
</mapper>